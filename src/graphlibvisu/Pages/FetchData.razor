@page "/loadgraph"

@using graphlibvisu.Data
@inject FileSystemLoader fs_loader

<h1>Load example graphs</h1>

<p>Please select a graph to load from the list below</p>

@if (graphs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
              
                <th>TITLE</th>
                <th>TYPE</th>
                <th>OPEN</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var g in graphs)
            {
                <tr>
                    <td>@g.filename</td>
                  
                    <td>@g.type</td>
                    <td>
                        <a class="btn btn-primary" href="/visu?f=@g.filename" role="button">OPEN</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private GraphLoadingItem[] graphs;

    protected override async Task OnInitializedAsync()
    {
        graphs = await fs_loader.GetGraphLoadingItem();
    }
}
